
.block-content
  background: whiteColor
  margin-top: 70px
  margin-bottom: 55px
  display: flex
  flex-direction: column;
  height: auto;
  
.thanks-title-wrap
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 0

.thanks-title-text
  margin-left: 30px

.thanks-main-title
  font-weight: 700
  font-size: 48px
  color: #2f5068


.thanks-main-subtitle
  font-weight: 700
  font-size: 24px
  color: #13aaac

.thanks-payment-wrap
  display: flex;
  width: 100%
  justify-content: space-around;
  padding: 30px 0
  border-bottom: 1px solid #cccccc
  border-top: 1px solid #cccccc

.thanks-payment-block
  display: flex;
  flex-direction: column;
  width: 40%

.payment-info-row
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px
  &:last-child
    margin-bottom: 0

.payment-info-text
  color: #2f5068
  font-size: 18px
  font-weight: 600

.payment-content-text
  color: #2f5068
  font-size: 18px
  width: 55%
  text-align: right;

.payment-sum-wrap
  display: flex;
  justify-content: flex-end;
  border-bottom: 1px solid #cccccc
  padding: 20px 60px
  align-items: baseline;

.payment-sum-status
  font-weight: 18px
  font-weight: 700
  color: #2f5068

.payment-sum
  font-size: 36px
  color: #13aaac
  font-weight: 800
  margin-left: 35px
  letter-spacing: 3px

.button-wrap
  display: flex;
  justify-content: center;
  padding: 45px 0

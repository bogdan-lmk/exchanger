@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import 'animate.css'
html
	font-size baseFontSize
	height 100%
	line-height 1.3
	overflow-x: hidden;

body
	font-family mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

header,
footer,
section
	position relative
	display: flex;
	justify-content: center;

input,
select,
button
	outline none
img
	max-width 100%

::-webkit-input-placeholder {
  color: #999999;
	font-style: italic;
}

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	width: 100%
	max-width: 1200px
	z-index: 999

.overflow
	overflow: hidden;


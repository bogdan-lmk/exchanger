footer
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%
  
.footer-content
  display:flex
  justify-content: space-between;
  padding: 60px 0
  align-items: center;


.feedback
  display: flex;
  flex-direction: column;
  position: relative;
  &:before
    content: ''
    background: url('/static/img/general/fdb-img.png')
    width: 46px
    height: 46px
    display: flex;
    position: absolute;
    left: -55px
    bottom: 0
.feedback-text
  Text-Style-Link()
  margin-bottom: 15px

.feedback-link
  text-decoration: underline;
  color: #3077b3
  Text-Style-Link()
  transition: 0.3s ease-in-out
  &:hover
    color: orange-one
    transition: 0.3s ease-in-out

.social-icon
  width: 25px
  height: 15px
  fill whiteColor


.social-text
  Text-Style-Main()


.icon-vk
  height: 20px

.social-link-wrap
  display: flex;
  margin-top: 15px

.social-link
  height: 40px
  width: 40px
  display: flex;
  align-items: center;
  justify-content: center;
  transition: 0.3s ease-in-out
  box-shadow: 5px 9px 20px 0px rgba(50, 50, 50, 0.37);
  margin-right: 25px
  &:last-child
    margin-right: 0
  &:hover
    transition: 0.3s ease-in-out

#vk-link
  background: #29c5f6
  &:hover
    background: #35a6b7

#fb-link
  background: #6788ce
  &:hover
    background: #35a6b7

#lkd-link
  background: #3a9bdc
  &:hover
    background: #35a6b7

.footer-content-bottom
  display: flex;
  justify-content: center;
  background: #302f2e
  width: 100%

.copyright
  font-size: 12px
  color: #00b88a
  padding: 25px 0

.mobile-menu
  display: flex;
  width: 100%

.footer-nav
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

.mobile-footer-navigation
  display: none;

.nav-link-footer--mobile
  Text-Style-Link()
  transition: 0.3s ease-in-out
  text-transform: uppercase;
  margin-bottom: 20px
  &:last-child
    margin-bottom: 0
  &:hover
    color: orange-one
    transition: ease-in-out

.footer-logo--mobile
  margin-bottom: 40px
